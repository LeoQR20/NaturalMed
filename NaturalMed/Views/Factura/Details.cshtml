@model Infraestructura.Models.Factura

@{
    ViewBag.Title = "Detalle de la Orden";
}

<div style="margin-top:100px; margin-bottom:100px;">
    <h2 style="margin-top:5px; margin-bottom:2px;">Orden <b>#@Html.DisplayFor(model => model.IdFactura)</b> </h2>

    <hr />
    <div>
        <dl class="dl-horizontal text-left">
            <dt>
                @Html.DisplayNameFor(model => model.FechaCreacion):
            </dt>
            <dd>
                @Html.DisplayFor(model => model.FechaCreacion)
            </dd>
            <dt>
                @Html.DisplayNameFor(model => model.CondicionFactura):
            </dt>
            <dd>
                @Html.DisplayFor(model => model.CondicionFactura.Descripcion)
            </dd>
            <dt>
                @Html.DisplayName("Nombre Cliente: ")
            </dt>
            <dd>
                @{var NombreCompleto = Model.Cliente.Nombre + " " + Model.Cliente.Apellidos;}
                @Html.DisplayFor(model => NombreCompleto)
                
            </dd>
        </dl>
        <br />
        <h2 style="margin-top:5px; margin-bottom:2px;">Resumen de la Orden</h2>
        <hr />
        <table class="table table-hover">
            <tr>
                <th>
                    Producto
                </th>
                <th>
                    Cantidad
                </th>
                <th>
                    Precio
                </th>
            </tr>
            @foreach (var item in Model.Producto_Factura)
            {
                <tr>
                    <td>
                        @Html.DisplayFor(modelItem => item.Producto.Descripcion)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.Cantidad)
                    </td>
                    <td>
                        &cent;@Html.DisplayFor(modelItem => item.Precio)
                    </td>
                </tr>
            }
        </table>
        <div class="row">
            <div class="col-lg-5 col-sm-5"></div>
            <div class="col-lg-7 col-sm-5 ml-auto">
                <table class="table table-clear">
                    <tbody>
                        <tr>
                            <td class="left">
                                <strong>Impuesto</strong>
                            </td>
                            <td class="right">
                                <strong>&cent;@Html.DisplayFor(model => model.IVA)</strong>
                            </td>
                        </tr>
                        <tr>
                            <td class="left">
                                <strong>Subtotal</strong>
                            </td>
                            <td class="right">
                                <strong>&cent;@Html.DisplayFor(model => model.SubTotal)</strong>
                            </td>
                        </tr>
                        <tr>
                            <td class="left">
                                <strong>Total</strong>
                            </td>
                            <td class="right">
                                <strong>&cent;@Html.DisplayFor(model => model.Total)</strong>
                            </td>
                        </tr>
                    </tbody>
                </table>
            </div>
        </div>
    </div>
    <hr />

    <h5>
        @Html.ActionLink("Regresar al listado", "IndexAdmin")
    </h5>
</div>

@section Scripts {
    @Scripts.Render("~/bundles/jqueryval")
}
